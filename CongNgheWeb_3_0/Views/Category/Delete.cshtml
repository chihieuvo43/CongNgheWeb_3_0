@model CongNgheWeb_3_0.Models.tbl_Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Category")">Các danh mục</a></li>
    <li class="breadcrumb-item">Xóa danh mục : @Model.CategoryName </li>
</ol>
<div class="agileinfo-grap text-center">
    <div class="agileits-box">
        <header class="agileits-box-header clearfix">
            <h3>Xóa chức vụ <strong>@Model.CategoryName</strong></h3>
        </header>
        <div class="agileits-box-body clearfix">
            <h3 class="text-danger">Các khóa học có danh mục<strong> @Model.CategoryName</strong> sẽ bị xóa khỏi danh mục</h3>


            @ViewBag.ListPosition
        </div>
        <footer>
            @using (Html.BeginForm())
            {
                <input type="submit" class="btn btn-danger" value="Đồng ý" />

                <a class="btn btn-primary" href="@Url.Action("Index", "Category")">
                    Về danh sách
                </a>
            }
        </footer>
    </div>
</div>