@model CongNgheWeb_3_0.Models.tbl_Position

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Position")">Các chức vụ</a></li>
    <li class="breadcrumb-item">Xóa chức vụ : @Model.PositionName</li>
</ol>
<div class="agileinfo-grap text-center">
    <div class="agileits-box">
        <header class="agileits-box-header clearfix">
            <h3>Xóa chức vụ <strong>@Model.PositionName</strong></h3>
        </header>
        <div class="agileits-box-body clearfix">
            <h3 class="text-danger">Các nhân viên có chức vụ <strong> @Model.PositionName</strong> sẽ không còn chức vụ nữa</h3>
            

            @ViewBag.ListPosition
        </div>
        <footer>
            @using (Html.BeginForm())
            {
                <input type="submit" class="btn btn-danger" value="Đồng ý" />

                <a class="btn btn-primary" href="@Url.Action("Index", "Position")">
                    Về danh sách
                </a>
            }


        </footer>
    </div>
</div>


