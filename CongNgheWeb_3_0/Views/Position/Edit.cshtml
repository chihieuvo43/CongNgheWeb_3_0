
@model CongNgheWeb_3_0.Models.tbl_Position
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--heder end here-->
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Position")">Các chức vụ</a></li>
    <li class="breadcrumb-item active">Sửa chức vụ <strong>@Model.PositionName</strong></li>
</ol>
<!--grid-->
<div class="grid-form">
    <div class="grid-form1">
        <h2 id="forms-example" class="">Sửa chức vụ</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form>
                @Html.ValidationSummary(true,"",new {@class="text-danger" })
                @Html.HiddenFor(model=>model.ID)
                <div class="form-group">
                    @Html.LabelFor(model=>model.PositionName)
                    <div class="co-12">
                        @Html.EditorFor(model=>model.PositionName,new {@class= "form-control" })
                        @Html.ValidationMessageFor(model=>model.PositionName,null ,new {@class="text-danger" })
                    </div>
                </div>
                <button type="submit" class="btn btn-danger">Tạo chức vụ</button> @ViewBag.Status
            </form>
        }
    </div>
</div>
